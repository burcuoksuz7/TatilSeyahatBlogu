@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yorum İşlemleri</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Blog</th>
        <th>Yorum</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <th>@x.ID</th>
    <td>@x.KullaniciAdi</td>
    <td>@x.Mail</td>
    <td>@x.Blog.Baslik</td>
    <td>@x.Yorum</td>
    <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-success">Düzenle</a></td>
    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
</tr>
    }
</table>
