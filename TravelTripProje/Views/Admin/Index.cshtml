@using TravelTripProje.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Blog İşlemleri</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Görsel</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <td>@x.Baslik</td>
            <td>@x.Tarih.ToString("dd.MM.yyyy")</td>
            <td>
                <img src="@x.BlogImage" style="width:140px; height:90px" ; />
            </td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn pull-right btn btn-primary">Yeni Blog Ekle</a>