@model TravelTripProje.Models.Siniflar.Iletisim
@{
    ViewBag.Title = "IletisimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>İletişim İşlemleri</h3>
<br />
@using (Html.BeginForm("IletisimDuzenle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Yetkili)
    @Html.TextBoxFor(x => x.Yetkili, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Telefon)
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Telefon2)
    @Html.TextBoxFor(x => x.Telefon2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Fax)
    @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Konum)
    @Html.TextBoxFor(x => x.Konum, new { @class = "form-control" })
    <br />
    <button class="btn pull-right btn-success">Yetkili Düzenle</button>
}

